generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Wish {
  id        Int      @id @default(autoincrement())
  userUin   String   @unique
  message   String
  user      User     @relation(fields: [userUin], references: [uin])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Gift {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  index     Int
  maxCount  Int
  rewards   Reward[]
}

model GiftCode {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  code       String   @unique
  users      User[]
  usedByUins Json
  rewards    Reward[]
}

model Reward {
  id          Int        @id @default(autoincrement())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  count       Int
  phoneNumber String?
  address     String?
  displayName String?
  giftId      Int?
  gift        Gift?      @relation(fields: [giftId], references: [id])
  userUin     String
  user        User       @relation(fields: [userUin], references: [uin])
  giftCodes   GiftCode[]
}

model User {
  id                 Int        @id @default(autoincrement())
  checkInCount       Int        @default(0)
  lastCheckIn        DateTime?
  dailyRewardClaimed Boolean    @default(false)
  uin                String     @unique
  ballCount          Int
  rewards            Reward[]
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt
  wish               Wish?
  giftCodes          GiftCode[]
}
