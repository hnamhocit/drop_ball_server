generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Wish {
  id        Int      @id @default(autoincrement())
  userUin   String
  user      User     @relation(fields: [userUin], references: [uin])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GiftCode {
  id             Int      @id @default(autoincrement())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  code           String   @unique
  expiredDate    DateTime
  remainingCount Int
  reward         Reward[]
}

model Gift {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  index     Int
  maxCount  Int
  rewards   Reward[]
}

model Reward {
  id          Int        @id @default(autoincrement())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  count       Int?
  phoneNumber String?
  address     String?
  displayName String?
  giftId      Int?
  gift        Gift?      @relation(fields: [giftId], references: [id])
  userUin     String
  user        User       @relation(fields: [userUin], references: [uin])
  giftCodes   GiftCode[]
}

model User {
  id        Int      @id @default(autoincrement())
  uin       String   @unique
  ballCount Int
  rewards   Reward[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Wish      Wish[]
}
